---
import plus from "../../public/plus.svg";
---

<style>
    .header {
        align-items: center;
        background-color: var(--grey);
        border-bottom: var(--primary) 1px solid;
        color: var(--primary);
        display: flex;
        justify-content: space-between;
        padding: 1.6rem 2rem;
    }

    .logo {
        font-size: 3.6rem;
        font-weight: 700;
        letter-spacing: -1px;
    }

    .logo__link {
        color: inherit;
        text-decoration: none;
    }

    .menu-toggle {
        cursor: pointer;
        width: 2.8rem;
    }

    @media screen and (min-width: 992px) {
        .header {
            border-bottom-width: 2px;
        }

        .logo {
            font-size: 7.2rem;
        }

        .menu-toggle {
            width: 5.6rem;
        }
    }
</style>

<header class="header">
    <div class="logo"><a href="/en/" class="logo__link">LEEP</a></div>
    <div class="menu-toggle">
        <img src={plus} alt="" />
    </div>
</header>